# Server Configuration
PORT=8080                   # Port aplikasi yang digunakan

# Database Configuration (MySQL)
DB_HOST=mysql               # Host database MySQL (nama service di docker-compose)
DB_PORT=3306                # Port database MySQL
DB_USER=ticert_user         # Username database MySQL
DB_PASSWORD=ticert_password # Password database MySQL
DB_NAME=ticert              # Nama database MySQL

MYSQL_ROOT_PASSWORD=ticert_password # Password root MySQL Docker

# Redis Configuration
REDIS_HOST=redis           # Host Redis (nama service di docker-compose)
REDIS_PORT=6379            # Port Redis
REDIS_PASSWORD=            # Password Redis (kosong jika tidak ada)
REDIS_DB=0                 # Nomor database Redis

# JWT Configuration
JWT_ACCESS_SECRET=your_super_secret_access_key_here   # Secret key untuk JWT access token
JWT_REFRESH_SECRET=your_super_secret_refresh_key_here # Secret key untuk JWT refresh token
JWT_ACCESS_EXPIRY=1        # Masa berlaku access token (jam)
JWT_REFRESH_EXPIRY=24      # Masa berlaku refresh token (jam)

# Gin Mode
GIN_MODE=release           # Mode Gin (release/development)